{% extends 'base.html.twig' %}

{% block title %}Ajouter un Trick{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ajouter un Trick</h1>

        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.groupe) }}
            {{ form_row(form.pictureFiles) }}
            {{ form_widget(form._token) }}
            <label for="">Videos</label>
            <div class="videos" data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}"></div>
            <button class="btn btn-success">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
