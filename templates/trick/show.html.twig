{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
    <h1>Trick</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ trick.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>Groupe</th>
                <td>{{ trick.groupe.name }}</td>
            </tr>
            <tr>
                <th>Images</th>
                {% for picture in trick.pictures %}
                    <td><img src="{{ asset('uploads/pictures/' ~ picture.URL) }}" width="400" height="341"></td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('trick_edit', {'id': trick.id}) }}">Modifier</a>

    {{ include('trick/_delete_form.html.twig') }}
{% endblock %}
