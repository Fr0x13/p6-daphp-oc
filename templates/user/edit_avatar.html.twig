{% extends 'base.html.twig' %}

{% block title %}Modifier votre avatar{% endblock %}

{% block body %}
    <div class="container full-height-container">
        <div class="row">
            <div class="col-8 mx-auto mt-5">
                <h1>Modifier votre avatar</h1>

                <img class="rounded-circle" src="{{ asset('uploads/avatars/' ~ currentAvatar) }}" width="200" height="200">

                <form method="post" action="{{ path('user_delete_avatar', {'id': app.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                    <button class="btn btn-danger ml-2 mb-5">Supprimer votre avatar</button>
                </form>

                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
