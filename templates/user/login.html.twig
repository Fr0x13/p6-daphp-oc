{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container d-flex full-height-container">
        <div class="login-container align-self-center m-auto py-2 px-4">
            <h1>Connexion</h1>
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey | trans(error.messagedata, 'security') }}
                </div>
            {% endif %}
            <form action="{{ path('user_login') }}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nom d'utilisateur" required name="_username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>
            <p><a href="{{ path('user_registration') }}">S'inscrire</a></p>
            <p><a href="{{ path('user_forgot_password') }}">Mot de passe oubli√© ?</a></p>       
        </div>    
    </div>
{% endblock %}